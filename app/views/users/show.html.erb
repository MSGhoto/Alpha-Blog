<div class="container">
    <h1 class="text-center mt-4" ><%= @user.username%></h1>

    <%= gravatar_for @user, size:200 %>
    <% if logged_in? && @user == current_user%>
        <div class="text-center mt-4">
        <%= link_to "Edit your Profile ", edit_user_path(@user), class: "btn btn-outline-info"%>
        </div>
    <%end%>

    <h4 class="text-center mt-5" >Articles</h4>

    <div class="flickr_pagination mb-3 mt-3">
    <%= will_paginate @article, :container => false %>
    </div>

    <%= render 'articles/article'%>

    <div class="flickr_pagination mb-5 mt-3">
    <%= will_paginate @article, :container => false %>
    </div>

</div>