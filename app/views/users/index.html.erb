<h1 class="text-center mt-4"> Showing Alpha Blogers</h1>
<div class="container">
    <% @users.each do |user| %>
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-body rounded">
                <div class="card-header fst-italic">
                    name: <%= user.username%>
                </div>
                <div class="card-body">
                    <%= link_to gravatar_for(user, size:80),user, class:"card-title" %>
                    <p class="card-text"> <%= pluralize(user.Articles.count, "article")%> </p>
                    <p class="card-text">  </p>
                    <%= link_to "Profile", user_path(user), class: "btn btn-outline-primary" %>
                    <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-info" %>
                    
                </div>
                <div class="card-footer text-muted">
                    <small>
                        Joined: <%= time_ago_in_words(user.created_at)%> ago,
                    </small>
                </div>
            </div>
        </div>
    </div>
    <%end%>
</div>