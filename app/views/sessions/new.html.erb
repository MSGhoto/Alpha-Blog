<div class="container">
    <h1 class="text-center mt-4" >Signup for Alpha Blogs</h1>
    
    <div class="container mt-5 mb-5">
    <div class ="row justify-content-center">
        <div class="col-6">
            <%= form_with(scope: :session, url: login_path,class:"shadow p-3 mb-3 bg-white rounded",local: true, data: { turbo: false }) do |f|%>
                
                <div class="form-group row mb-5 mt-5">
                    <%= f.label :email ,class:"col-2 col-form-label"%><br/>
                    <div class="col-10">
                        <%= f.email_field :email ,class:"form-control shadow" %>
                    </div>
                </div> 
                <div class="form-group row mb-5">
                    <%= f.label :password ,class:"col-2 col-form-label"%><br/>
                    <div class="col-10">
                        <%= f.password_field :password ,class:"form-control shadow" %>
                    </div>
                </div> 
                <div class="form-group row justify-content-center mb-3">  
                    <%= f.submit"Login", class:"col-sm-3 btn btn-outline-success"%>
                </div>
                
            <%end%>
        </div>

        <small class="text-center mt-3 mb-3"><%= link_to '[Cancel & Return Article listting page]',articles_path %></small>
    </div>
    </div>



</div>