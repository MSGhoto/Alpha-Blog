<div class="container mt-5 mb-5">
    <div class ="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-white rounded",local: true, data: { turbo: false }) do |f|%>
                
                <div class="form-group row mb-3">
                    <%= f.label :title , class: "col-2 col-form-label" %><br/>
                    <div class="col-10">
                         <%= f.text_field :title , class: "form-control shadow"%>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <%= f.label :description ,class:"col-2 col-form-label"%><br/>
                    <div class="col-10">
                        <%= f.text_area :description , rows:10,class:"form-control shadow" %>
                    </div>
                </div> 
                <div class="form-group row justify-content-center mb-3">  
                    <%= f.submit class:"col-sm-2 btn btn-outline-success"%>
                </div>
                
            <%end%>
        </div>

        <small class="text-center mt-3 mb-3"><%= link_to '[Cancel & Return Article listting page]',articles_path %></small>
    </div>
</div>


