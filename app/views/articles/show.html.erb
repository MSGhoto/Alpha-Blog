<div class="container">
    <h2 class="text-center mt-4"> Title: <%= @article.title %> </h2>
    
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-body rounded">
                <div class="card-header fst-italic">
                    by: <%= link_to @article.user.username,user_path(@article.user)%>
                    <%= link_to gravatar_for(@article.user,size: 50),user_path(@article.user)%>
                </div>
                <div class="card-body">
                    <div class="card-text text-start"> 
                        <%= simple_format(@article.description) %> 
                    </div>
                    <% if logged_in? && (@article.user == current_user || current_user.admin?)%>
                        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
                        <%= link_to "Delete", article_path(@article), data: { "turbo-method": :delete , turbo_confirm: "Are you sure?,Delete article"}, class: "btn btn-outline-danger" %>
                    <% end %>
                </div>
                <div class="card-footer text-muted">
                    <small> created <%= time_ago_in_words(@article.created_at)%> ago,
                        updated <%= time_ago_in_words(@article.updated_at)%> ago 
                    </small>
                </div>
            </div>
        </div>

        <small class="text-center mt-3 mb-3"><%= link_to '[Return Article listting page]',articles_path %></small>
    </div>

</div>
